        <td> {{ name }} </td>
        <td> {{ additionalData }} </td>
        {{ children }}
    </tr>
](node) {
    let children = Empty();
    if (len(node.children) > 0) {
        children = map(node.children, Node)
    } ;
    return {
        name: node.name,
        additionalData: node.additinalData,
